@model IEnumerable<Highscore>
@{
    //ViewData["Title"] = "HighScores";
    ViewData["Title"] = "Donkey_Kong";
}

<article class="bodyArt">

    <section class="headSec">
        <div class="textSec">
            <h1>@ViewData["Title"]</h1>

            <span>
                Donkey Kong is a series of video games featuring the adventures of an ape-like 
                character called Donkey Kong, conceived by Shigeru Miyamoto in 1981. The franchise 
                consists mainly of two game genres, but also includes additional spin-off titles of various genres.
            </span>
            <div class="div1">
                <Label>Genre:</Label>
                <div>Video game series</div>

            </div>
            <div class="div2">
                <Label>Release Year:</Label>
                <div>1981</div>

            </div>
        </div>

        <div class="imageRam">
            <img src="/image/Donky_Kong2.png" class="img-thumbnail card-img-top" alt="Alternate Text" />
        </div>

    </section>

    <partial name="_Leaderboard"/>
   
</article>

